<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="estate.offer_list" model="ir.ui.view">
        <field name="name">Offer List</field>
        <field name="model">estate.offer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="amount"/>
                <field name="buyer_id"/>
                <field name="create_date"/>
                <field name="validity"/>
                <field name="deadline_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="estate.offer_form" model="ir.ui.view">
        <field name="name">Offer Form</field>
        <field name="model">estate.offer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="amount"/>
                            <field name="buyer_id"/>
                            <field name="state"/>
                        </group>
                        <group>
                            <field name="create_date"/>
                            <field name="validity"/>
                            <field name="deadline_date"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
